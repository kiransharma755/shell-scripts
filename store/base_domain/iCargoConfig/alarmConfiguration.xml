	<alarms transactionId="MemoryStats">
		<alarm alarmAttribute="heapMemoryUsage">			
			<threshold>500</threshold>
			<notificationInterval>600</notificationInterval>
			<thresholdCount>3</thresholdCount>
			<thresholdInterval>180</thresholdInterval>
			<message>Heap memory usage exceeds threshold ; see log file for more details"</message>
			<notifiers>LOGGER</notifiers>
		</alarm>
	</alarms>
	
	<alarms transactionId="JDBCPoolStats">
			<alarm alarmAttribute="jdbcFreePoolSize">			
				<threshold>-15</threshold>
				<notificationInterval>900</notificationInterval>
				<thresholdCount>2</thresholdCount>
				<thresholdInterval>1800</thresholdInterval>
				<message>Free Connection Pool Size has come down to minimum Value</message>
				<notifiers>MAIL</notifiers>
			</alarm>
	</alarms>	
	
	
	<alarms transactionId="ThreadStats">
		<alarm alarmAttribute="threadCount">			
			<threshold>0</threshold>
			<notificationInterval>600</notificationInterval>
			<thresholdCount>3</thresholdCount>
			<thresholdInterval>300</thresholdInterval>
			<message>Active Server Threads Exeeded</message>
			<notifiers>MAIL</notifiers>
			</alarm>
	</alarms>
	
	<alarms transactionId="jobScheduleStats">
		<alarm alarmAttribute="isJobError">			
			<threshold>0</threshold>
			<notificationInterval>0</notificationInterval>
			<thresholdCount>0</thresholdCount>
			<thresholdInterval>0</thresholdInterval>
			<message>Job Scheduler Exception</message>
			<notifiers>MAIL</notifiers>
		</alarm>
	</alarms>
	
	
	<alarms transactionId="iCargoTransactionMonitorStats">
		<alarm alarmAttribute="systemError">			
			<threshold>0</threshold>
			<notificationInterval>0</notificationInterval>
			<thresholdCount>0</thresholdCount>
			<thresholdInterval>0</thresholdInterval>
			<message>System Exception Occured</message>
			<notifiers>LOGGER,MAIL,DB</notifiers>
		</alarm>
	</alarms>
	
	<alarms transactionId="JMSQueueDepth">
		<alarm alarmAttribute="failed">			
			<threshold>10</threshold>
			<notificationInterval>600</notificationInterval>
			<thresholdCount>3</thresholdCount>
			<thresholdInterval>300</thresholdInterval>
			<message>Current depth of the Queue</message>
			<notifiers>MAIL</notifiers>
		</alarm>
	</alarms>
	
	
	<alarms transactionId="webMonitorStats">
		<alarm alarmAttribute="latency">			
			<threshold>1</threshold>
			<thresholdInterval>600</thresholdInterval>
			<notificationInterval>1</notificationInterval>
			<thresholdCount>10</thresholdCount>			
			<message>Occurance of a threshold violation for the monitored transaction</message>
			<notifiers>MAIL</notifiers>
		</alarm>
	</alarms>	
	
 </alarm-config> 